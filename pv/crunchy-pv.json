{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "crunchy-pv$COUNTER"
  },
  "spec": {
    "capacity": {
        "storage": "40Gi"
    },
    "accessModes": [ "ReadWriteOnce", "ReadWriteMany", "ReadOnlyMany" ],
    "hostPath": {
        "path": "/data/pv-$COUNTER"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}

